<%= simple_form_for(@planet) do |f| %>

<div class="form-inputs">
<%= f.input :name %>
<%= f.input :description %>
<%= f.input :solar_system %>
<%= f.input :category %>
<%= f.input :size %>
<%= f.input :price %>
 </div>
<%= f.hidden_field :user_id, value: current_user.id %>
<div class="form-actions">
<%= f.submit class: "btn btn-primary"%>
</div>
<% end %>
