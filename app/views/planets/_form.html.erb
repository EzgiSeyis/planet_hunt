<%= simple_form_for(@planet) do |f| %>

<div class="form-inputs">
<%= f.input :name %>
<%= f.input :description %>
<%= f.input :solar_system %>
<%= f.input :category, collection: [ 'Double planet','Earth analog', 'Exoplanet', 'Gas giant', 'Ice planet', 'Iron planet', 'Lava planet', 'Ocean planet', 'Protoplanet', 'Terrestrial planet'] %>
<%= f.input :size %>
<%= f.input :price %>
<%= f.input :photo %>
<%= f.input :photo_cache, as: :hidden %>
 </div>
<%= f.hidden_field :user_id, value: current_user.id %>
<div class="form-actions">
<%= f.submit class: "btn full_btn"%>
</div>
<% end %>
