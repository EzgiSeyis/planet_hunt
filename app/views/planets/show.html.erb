<div class="banner banner-show" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.3) 50%), url(<%= @planet.photo %>);">
  <div class="banner-content">
    <h1><%= @planet.name %></h1>
    <p>Planet in <%= @planet.solar_system %> solar system </p>
    <%= link_to "Book now", new_planet_booking_path(@planet), class: "btn btn-primary btn-lg" %>
  </div>
</div>



<div id="show_planet_container" class="container">
  <br>
  <div>
    <div class="col-sm-4"><h3>Description: </h3></div>
    <div class="col-sm-8"><h3><%= @planet.description %></h3></div>
  </div>
  <!-- Force next columns to break to new line -->
  <div class="w-100"></div>

  <div>
    <div class="col-sm-4"><h3>Solar System: </h3></div>
    <div class="col-sm-8"><h3><%= @planet.solar_system %></h3></div>
  </div>
  <!-- Force next columns to break to new line -->
  <div class="w-100"></div>

  <div>
    <div class="col-sm-4"><h3>Category: </h3></div>
    <div class="col-sm-8"><h3><%= @planet.category %></h3></div>
  </div>
  <!-- Force next columns to break to new line -->
  <div class="w-100"></div>

  <div>
    <div class="col-sm-4"><h3>Size: </h3></div>
    <div class="col-sm-8"><h3><%= @planet.size %></h3></div>
  </div>
  <!-- Force next columns to break to new line -->
  <div class="w-100"></div>

  <div>
    <div class="col-sm-4"><h3>Price: </h3></div>
    <div class="col-sm-8"><h3><%= @planet.price %> Mio $</h3></div>
  </div>
  <!-- Force next columns to break to new line -->
  <div class="w-100"></div>

  <!-- show delete Icon only if owner of planet -->
  <% if policy(@planet).destroy? %>
    <%= link_to planet_path(@planet), method: :delete, :data => {:confirm => 'Are you sure?'} do %>
      <i class="fas fa-trash"></i> <!-- https://fontawesome.com/icons?d=gallery&q=delete -->
    <% end %>
  <% end %>

  <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
  <%= link_to "Back to Home", planets_path, class:"btn btn-primary"%>
</div>
<%= console %>

