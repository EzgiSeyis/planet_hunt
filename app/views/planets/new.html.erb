
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
<h1>Create a new Planet</h1>


<%= simple_form_for(@planet) do |f| %>

<div class="form-inputs">
<%= f.input :name %>
<%= f.input :description %>
<%= f.input :solar_system %>
<%= f.input :category %>
<%= f.input :size %>
<%= f.input :price %>
 </div>
<%= f.hidden_field :user_id, value: current_user.id %>
<div class="form-actions">
<%= f.submit "Create a Planet", class: "btn btn-primary"%>
</div>
<% end %>

</div>
</div>

</div>
