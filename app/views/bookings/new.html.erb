<!-- Banner -->
<div class="banner banner-show" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= @planet.photo %>);">
  <div class="banner-content">
    <h1><%= @planet.name %></h1>
    <p>Planet in <%= @planet.solar_system %> solar system </p>
  </div>
</div>

<!-- Form -->
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
        <h3>Enter your booking details:</h3>
        <div></div>
        <%= simple_form_for([@planet, @booking]) do |f| %>

        <div class="form-inputs">
          <%= f.label :start_date %>
          <%= f.date_field :start_date, min: Date.today, class: "form-control"%>
          <%= f.label :end_date %>
          <%= f.date_field :end_date, min: Date.today, class: "form-control"%>
          <%= f.input :message %>
        </div>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :planet_id, value: params[:planet_id] %>
        <div> Price per day: $<span id="planet-price"><%= @planet.price %></span>  </div>
        <div id="booking-total"></div>
        <%= f.submit class: "btn full_btn", value: "Book now"%>
      </div>
      <% end %>
    </div>
  </div>
</div>


<%= javascript_pack_tag 'booking' %>
