<div class="wrapper">
  <div class="inside-wrapper">

    <h2>Great!</h2>
    <p>The booking was successfully completed!</p>
    <p>You have to wait for the answer from the planet owner <b><%= @booking.planet.user.first_name %></b>.</p>
    <%= cl_image_tag @booking.planet.photo, :width =>200, :height => 150%>
    <p>You have booked <b><%= @booking.planet.name %></b> from
      <b><%= @booking.start_date %></b> to <b><%= @booking.end_date %></b>.</p>

      <% if @booking.message.empty? %>
      <p>You don't have an extra message.</p>
      <% else %>
      <p>Your message for <b><%= @booking.planet.user.first_name %></b>:
        <%= @booking.message %></p>
        <% end %>


        <div class="boxx">
          <div class="photo-name">
            <% if @booking.user.photo.nil? %>
              <i class="fas fa-user"></i>
            <% else %>
              <%= cl_image_tag @booking.user.photo, :width =>100, :height => 100, :crop => :thumb, :gravity => :face, class: "user-picture"%>
            <% end %>
            <p>You</p>
          </div>

          <i class="fas fa-check"></i>

          <div class="photo-name">
            <% if @booking.planet.user.photo.nil? %>
              <i class="fas fa-user"></i>
            <% else %>
              <%= cl_image_tag @booking.planet.user.photo, :width =>100, :height => 100, :crop => :thumb, :gravity => :face, class: "user-picture"%>
            <% end %>
            <p><%= @booking.planet.user.first_name %></p>
          </div>
        </div>
      </div>

    </div>

