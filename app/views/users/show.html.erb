<div class="container">
  <div class="from_background">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <center><h2 class="center-text">My Profile</h2></center>
        <div id="profile-background">
          <%= cl_image_tag @user.photo, :width =>300, :height => 300, :crop => :thumb, :gravity => :face %>
          <br>
          <h3><%= @user.first_name %> <%= @user.last_name %></h3>
          on board since:
          <p><%= @user.created_at.strftime("%d.%m.%Y") %></p>
          <% if policy(@user).update? %>
          <%= form_for @user do |f| %>
          <%= f.text_area :description, rows:"4"%>
          <%= f.submit "Save", class: "btn full_btn" %>
          <% end %>
          <% else %>
          <p><%= @user.description %></p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1 ">
        <% @user.planets.each do |planet| %>
        <div class="col-xs-4">
          <%= link_to planet_path(planet) do %>
            <div class="card" style="background-image: url( <%= planet.photo %>);">
            <span class="card-description"> <h2><%= planet.name %></h2></span>
            </div>
          <% end %>
        </div>
       <% end %>
     </div>
    </div>
  </div>
</div>


